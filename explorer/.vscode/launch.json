{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/**/*.js"],
    },
    {
      "name": "Client",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    }
  ],
  "compounds": [
    {
      "name": "Server/Client",
      "configurations": ["Server", "Client"],
      "stopAll": true
    }
  ]
}
