{
    "extends": [
        "next/core-web-vitals",
        "next/typescript"
    ],
    "rules": {
        // disable the base rule
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_",
                "caughtErrorsIgnorePattern": "^_"
            }
        ]
    }
}